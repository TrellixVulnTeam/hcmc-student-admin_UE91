<script>
	function isUrlValid(url) {
		return true;
	}

	function formatDate(date) {
		var hours = date.getHours();
		var minutes = date.getMinutes();
		var ampm = hours >= 12 ? 'pm' : 'am';
		hours = hours % 12;
		hours = hours ? hours : 12; // the hour '0' should be '12'
		minutes = minutes < 10 ? '0' + minutes : minutes;
		var strTime = hours + ':' + minutes + ' ' + ampm;
		return date.getMonth() + 1 + "/" + date.getDate() + "/" + date.getFullYear() + "  " + strTime;
	}

	$(function () {
		CKEDITOR.replace('crawled_detail');
	});

	$("#test_parser").click(function () {
		if (!isUrlValid($("#test_url").val())) {
			$("#error_message").append("URL is not valid");
			$("#error-alert").fadeTo(2000, 500).slideUp(500, function () {
				$("#error-alert").slideUp(500);
				$("#error_message").empty();
			});
			return false;
		}
		$("#modalBody #tab_1").html('<iframe src="' + $("#test_url").val() + '" style="min-height: 100%;width: 100%;height:70vh" width="100%" height="100%"/>');
		$.ajax({
			url: 'http://localhost:9090/crawler',
			type: "POST",
			crossDomain: true,
			data: $("#parser_form").serializeArray(),
			success: function (res) {
				console.log(res)
				$("#crawled_title").html(JSON.stringify(res.title));
				$("#crawled_author").html(JSON.stringify(res.author));
				$("#crawled_datetime").html(res.datetime);
				$("#crawled_brief").html(JSON.stringify(res.brief));
				CKEDITOR.instances['crawled_detail'].setData(res.content)
				$("#crawled_thumbnail").append(res.thumbnail + "<br>");
			},
			error: function (err) {
				console.log("ERR", err);
			}
		});
		$("#myModal").modal('show');
	});
</script>