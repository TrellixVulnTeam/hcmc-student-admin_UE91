<section class="content-header">
    <h1>
        Source
        <small>HCMC-STUDENTS</small>
    </h1>
</section>

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Source</h3>
                </div>

                <div class="box-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <th>Bài báo</th>
                                <th>Url</th>
                                <th>Số bài viết</th>
                                <th>Trạng thái</th>
                            </thead>

                            <tbody>
                                 <% datas.forEach(function (data) { %>
                                    <tr id=<%= data.id %>>
                                        <td><a href="/sources/<%= data._id %>"><%= data.name %></a></td>
                                        <td><a href="<%= data.origin_url %>"><%= data.origin_url %></a></td>
                                        <td></td>
                                        <td>
                                            <div class="btn-group">
                                                <button type="button" class="btn btn-default dropdown-toggle"
                                                        data-toggle="dropdown">
                                                    <span class="caret"></span>
                                                    <span class="sr-only">Toggle Dropdown</span>
                                                </button>
                                                <ul class="dropdown-menu" role="menu">
                                                    <li><a href="#">Edit</a></li>
                                                    <li>
                                                        <a class="changeStatus" href="#">
                                                            <span class="status-action">
                                                                <% if (data.is_enable == true) { %>
                                                                    Enable 
                                                                <% } else { %>
                                                                    Disable
                                                                <% } %>
                                                            </span>
                                                        </a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </td>
                                    </tr>
                                <% }) %> 
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>            
<section>